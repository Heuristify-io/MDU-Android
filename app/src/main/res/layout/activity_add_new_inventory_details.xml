<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="clickHandler"
            type="com.heuristify.mdu.interfaces.OnClickHandlerInterface" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light"
        android:orientation="vertical"
        tools:context=".view.activities.AddNewInventoryDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_weight="0"
                android:clickable="true"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{clickHandler::onClick}"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:src="@drawable/chevron_left_24px" />

                <TextView
                    android:id="@+id/textViewBack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/archivo_regular"
                    android:gravity="left"
                    android:onClick="@{clickHandler::onClick}"
                    android:text="Back"
                    android:textColor="@color/light1"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_regular"
                    android:gravity="left"
                    android:text="Add New"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/archivo_regular"
                    android:gravity="left"
                    android:text="Inventory Item"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/archivo_regular"
                    android:gravity="left"
                    android:text="@string/inventory_desc2"
                    android:textColor="@color/light1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/archivo_regular"
                    android:gravity="left"
                    android:text="Medicine Name"
                    android:textColor="@color/light1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:backgroundTint="@color/dark2"
                    android:hint="Type Medicine"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/archivo_regular"
                        android:gravity="start"
                        android:text="From"
                        android:textColor="@color/light1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/archivo_regular"
                        android:gravity="start"
                        android:text="Strength"
                        android:textColor="@color/light1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_weight="1.3"
                        android:fontFamily="@font/archivo_regular"
                        android:gravity="start"
                        android:text="Unit"
                        android:textColor="@color/light1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_from"
                        style="@style/underLineSpinnerForInventoryDetails"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:backgroundTint="@color/dark2" />

                    <EditText
                        android:id="@+id/editTextStrength"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/dark2"
                        android:hint="000"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:textColor="@color/dark2"
                        android:textColorHint="@color/dark2"
                        android:textSize="@dimen/_12sdp" />

                    <Spinner
                        android:id="@+id/spinner_unit"
                        style="@style/underLineSpinnerForInventoryDetails"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:backgroundTint="@color/dark2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:fontFamily="@font/archivo_regular"
                        android:gravity="left"
                        android:text="Boxes"
                        android:textColor="@color/light1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewBoxSub"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/rounded_textview_white_color"
                            android:clickable="true"
                            android:fontFamily="@font/archivo_regular"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="@{clickHandler::onClick}"
                            android:text="-"
                            android:textColor="@color/dark2"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewBoxNumber"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_textview_dark_color"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewBoxAdd"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_textview_white_color"
                            android:clickable="true"
                            android:fontFamily="@font/archivo_regular"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="@{clickHandler::onClick}"
                            android:text="+"
                            android:textColor="@color/dark2"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:fontFamily="@font/archivo_regular"
                        android:gravity="left"
                        android:text="Quantity/Box"
                        android:textColor="@color/light1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewSub"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/rounded_textview_white_color"
                            android:clickable="true"
                            android:fontFamily="@font/archivo_regular"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="@{clickHandler::onClick}"
                            android:text="-"
                            android:textColor="@color/dark2"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewNumber"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_textview_dark_color"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewAdd"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_textview_white_color"
                            android:clickable="true"
                            android:fontFamily="@font/archivo_regular"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="@{clickHandler::onClick}"
                            android:text="+"
                            android:textColor="@color/dark2"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:background="?attr/selectableItemBackground"
                        android:fontFamily="@font/archivo_regular"
                        android:gravity="left"
                        android:text="Total"
                        android:textColor="@color/light1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewBoxesNumber"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:onClick="@{clickHandler::onClick}"
                            android:text="0"
                            android:textColor="@color/light1"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:text="X"
                            android:textColor="@color/light1"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewQuantBoxNumber"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/light1"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:text="="
                            android:textColor="@color/light1"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewQuantityAndBoxesTotal"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:onClick="@{clickHandler::onClick}"
                            android:text="0"
                            android:textColor="@color/dark2"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewMedicineForm"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/archivo_regular"
                            android:gravity="center"
                            android:text="Tablets"
                            android:textColor="@color/light1"
                            android:textSize="@dimen/_8sdp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonNextInventoryDetais"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/rounded_shape_light_dark_mix_color"
                android:clickable="true"
                android:enabled="false"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{clickHandler::onClick}"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

        </LinearLayout>

    </LinearLayout>

</layout>